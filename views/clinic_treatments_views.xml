<odoo>
    <record id="clinic_treatment_action" model="ir.actions.act_window">
        <field name="name">Treatment</field>
        <field name="res_model">clinic.treatment</field>
        <field name="view_mode">tree,form</field> 
    </record>
    <record id="clinic_treatment_form" model="ir.ui.view">
    <field name="name">Treatment</field>
    <field name="model">clinic.treatment</field>
    <field name="arch" type="xml">
        <form string="treatment_form">
            <sheet name="treatment">
                <header>
                    <h1>
                        <field name="treatment_id"/>
                    </h1>
                    <button name="pay_action" type="object" string="Pay"/> 
                </header>
                <group>
                <field name="patient_id"/>
                </group>
                <group>
                <field name = "doctor_id"/>
                </group>
                <group>
                <!-- <group>
                 <field name = "prescription_id"/> may be usefull for tracking the treatment 
                </group> -->
                <group>
                <field name = "appointment_id"/>
                </group>
                <group>
                <field name = "treatment_details">
                    <tree>
                        <field name="diagnoses"/>                        
                        <field name="prescriped_medication"/>
                        <field name="proceduers"/>
                    </tree>
                </field>   
                </group>
                <group>
                <field name = "notes"/>
                </group>
                <group>
                <field name = "total_price"/>
                </group>
            </sheet>
        </form>
    </field>
    </record>
    <record id="clinic_treatment_tree" model="ir.ui.view">
        <field name="name">Treatment</field>
        <field name="model">clinic.treatment</field>
        <field name="arch" type="xml">
            <tree string="treatment_tree">
                <field name="treatment_id"/>
                <field name="patient_id"/>
                <field name = "doctor_id"/>
                <field name = "appointment_id"/>
                <!-- <field name = "prescription_id"/> --><!--may be usefull for tracking the treatment -->
                <field name = "treatment_details"/>   
                <field name = "notes"/>   
                <field name = "total_price"/>   
            </tree>
        </field>
    </record> 

</odoo>